{
  "expo": {
    // Basic App Information
    "name": "TripNusFrontendRider", // Display name of your app
    "slug": "TripNusFrontendRider", // Unique identifier for your app in Expo's ecosystem
    "version": "1.0.0", // App version shown to users
    "orientation": "portrait", // Forces app to stay in portrait mode
    "icon": "./assets/images/icon.png", // Main app icon
    "scheme": "tripnus-rider", // Deep linking scheme for your app
    "userInterfaceStyle": "automatic", // Supports both light and dark mode
    "newArchEnabled": true, // Enables the new React Native architecture

    // iOS Specific Configuration
    "ios": {
      "supportsTablet": true, // App can run on iPads
      "bundleIdentifier": "com.tripnus.rider", // Unique iOS app identifier
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "aps-environment": "development"
      }
    },

    // Android Specific Configuration
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png", // Android adaptive icon foreground
        "backgroundColor": "#ffffff" // Android adaptive icon background
      },
      "package": "com.tripnus.rider", // Unique Android package name
      "edgeToEdgeEnabled": true, // Enables edge-to-edge display
      "googleServicesFile": "./google-services.json",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyD2MxqysyNtpEj0-yHnYhOI_Tgkx4x8Ci0" // Google Maps API key for Android
        }
      }
    },

    // Web Platform Configuration
    "web": {
      "bundler": "metro", // Uses Metro bundler for web
      "output": "static", // Generates static web output
      "favicon": "./assets/images/favicon.png" // Web favicon
    },

    // Expo Plugins Configuration
    "plugins": [
      "expo-router", // Enables Expo Router for navigation
      [
        "expo-splash-screen", // Splash screen configuration
        {
          "image": "./assets/images/splash-icon.png", // Splash screen image
          "imageWidth": 200, // Width of splash image
          "resizeMode": "contain", // How image fits splash screen
          "backgroundColor": "#ffffff" // Splash screen background color
        }
      ],
      [
        "expo-build-properties", // iOS build properties
        {
          // "android": {
          //   "compileSdkVersion": 33,
          //   "targetSdkVersion": 33,
          //   "buildToolsVersion": "33.0.0"
          // },
          "ios": {
            "useFrameworks": "static" // Uses static frameworks for iOS
          }
        }
      ],
      [
        "expo-notifications", // Push notifications configuration
        {
          // "icon": "./assets/images/notification-icon.png",
          // "color": "#ffffff",
          // "sounds": ["./assets/sounds/notification.wav"],
          "androidMode": "default", // Android notifications mode
          "androidCollapsedTitle": "TripNus", // Default title for collapsed notifications
          "iosDisplayInForeground": true // Shows notifications when app is in foreground on iOS
        }
      ]
    ],

    // Experimental Features
    "experiments": {
      "typedRoutes": true // Enables typed routes for better type safety
    },

    // Extra Configuration
    "extra": {
      "router": {}, // Extra router configuration
      "eas": {
        "projectId": "1a0bc73d-f154-487d-a6aa-2aae52766930" // Your EAS project identifier
      }
    }
  }
}
